# Base de données — adapte selon ton environnement
DATABASE_URL="mysql://root:@127.0.0.1:3306/resieup?serverVersion=8.0.30&charset=utf8mb4"
# Pour PostgreSQL :
# DATABASE_URL="postgresql://user:password@127.0.0.1:5432/residup?serverVersion=16&charset=utf8"

# JWT — générer avec : php bin/console lexik:jwt:generate-keypair
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=change_me_with_a_secure_passphrase
JWT_TOKEN_TTL=3600

# CORS
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

